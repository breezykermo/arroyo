{
    "type": "object",
    "title": "RedisConfig",
    "properties": {
        "connection": {
            "type": "object",
            "oneOf": [
                {
                    "type": "object",
                    "title": "Standard",
                    "properties": {
                        "address": {
                            "type": "string",
                            "description": "The address of your Redis server",
                            "examples": ["redis://localhost:6379"],
                            "pattern": "^redis://.*$"
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "address"
                    ]
                },
                {
                    "type": "object",
                    "title": "Clustered",
                    "required": [
                        "addresses"
                    ],
                    "properties": {
                        "addresses": {
                            "type": "array",
                            "title": "Addresses",
                            "description": "The addresses of your Redis cluster",
                            "items": {
                                "type": "string",
                                "title": "Address",
                                "examples": ["redis://localhost:6379"],
                                "pattern": "^redis://.*$"
                            }
                        }
                    },
                    "additionalProperties": false
                }
            ]
        },
        "credentials":  {
            "type": "object",
            "title": "Credentials",
            "properties": {
                "username": {
                    "type": "string",
                    "description": "The name of the ACL user on your Redis server, if protected",
                    "format": "var-string"
                },
                "password": {
                    "type": "string",
                    "description": "The password on your Redis server, if protected",
                    "format": "var-string"
                }
            }
        }
    },
    "required": [
        "connection"
    ]
}
